@page "/dang-nhap"
@model Course.Web.Client.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "/Pages/Shared/_Layout.cshtml";

}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">HỆ THỐNG HRM</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="fa fa-user-o"></span>
                    </div>
                    <h3 class="text-center mb-4">Đăng nhập</h3>
                    <form id="dang-nhap" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group text-danger">
                            @Model.Message
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.UserName" type="text" class="form-control rounded-left" placeholder="Tên đăng nhập (*)" autofocus="true" required>
                            <span class="span" asp-validation-for="Input.UserName"></span>
                        </div>
                        <div class="form-group d-flex">
                            <input asp-for="Input.Password" type="password" class="form-control rounded-left" placeholder="Mật khẩu" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng nhập</button>
                            <span class="span" asp-validation-for="Input.Password"></span>
                        </div>
                        <div class="form-group d-md-flex">
                            <div class="w-50">
                                <label class="checkbox-wrap checkbox-primary">
                                    Lưu mật khẩu
                                    <input type="checkbox" asp-for="Input.IsRemember" checked>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="w-50 text-md-right">
                                @*<a href="#">Quên mật khẩu</a>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>